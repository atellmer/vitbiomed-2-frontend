@import 'nib'
@import url(../resources/fonts/fonts.css)
@import url(../resources/icons/sprite/sprite.css)

$bg-color = #FFF
$p-color = #689f38
$p-color-text = #3b3b3b
$s-color-text = #898989

$phone = 640px
$tablet = 750px
$notebook = 940px
$desktop = 1600px
$full-hd = 1920px

$container-width = 1170px


//helpers
.no-padding
	padding 0!important
	margin 0!important
	
.paper-shadow-z1
	box-shadow 0 1px 6px rgba(0,0,0,0.12), 0 1px 4px rgba(0,0,0,0.12)!important
	
.paper-shadow-z2
	box-shadow 0 3px 10px rgba(0,0,0,0.16), 0 3px 10px rgba(0,0,0,0.23)!important
	
.paper-shadow-z3
	box-shadow 0 10px 30px rgba(0,0,0,0.19), 0 6px 10px rgba(0,0,0,0.23)!important
	
.paper-shadow-z4
	box-shadow 0 14px 45px rgba(0,0,0,0.25), 0 10px 18px rgba(0,0,0,0.22)!important
	
.paper-shadow-z5
	box-shadow 0 19px 60px rgba(0,0,0,0.3), 0 15px 20px rgba(0,0,0,0.22)!important
	
.divider
	height 1px
	width 100%
	border-top 1px solid #E0E0E0
	
.cover
	background-position center
	background-repeat no-repeat
	background-size cover
	
.flex
	display flex
	flex-flow row wrap
	justify-content center
	align-items center
	
.visible-hide
	position absolute
	visibility hidden
	
.visible-show
	position relative
	visibility visible

.only-desktop-visible	
	@media all and (max-width: $notebook)
		position absolute
		visibility hidden

.only-mobile-visible	
	@media all and (min-width: $notebook)
		position absolute
		visibility hidden

.only-phone-visible	
	@media all and (min-width: $phone)
		position absolute
		visibility hidden

.without-phone-visible	
	@media all and (max-width: $phone)
		position absolute
		visibility hidden


.transition
	transition all .2s ease-in-out
	
.cursor-pointer
	cursor pointer
			
p
	margin 0 0 25px 0

a
	outline none
	text-decoration none
	&:hover, &:active, &:focus
		outline none
		text-decoration none
		
.likearts-content 
	font-family 'MyseoSansCyrl'
	background-color $bg-color
	color $p-color-text
	font-weight 300

	.container-fluid
		padding 0
		margin 0
		
	.container
		width 100%
		max-width $container-width
		margin 0 auto
		padding 0

	.link
		color $primary-color-text
		@extend .transition
		&:hover
			color $primary-color

		&--underline
			border-bottom 1px solid $primary-color-text
			&:hover
				border-bottom 1px solid $primary-color


	[width="10"]
		width 10%

	[width="20"]
		width 20%

	[width="30"]
		width 30%

	[width="40"]
		width 40%

	[width="50"]
		width 50%

	[width="60"]
		width 60%

	[width="70"]
		width 70%

	[width="80"]
		width 80%

	[width="90"]
		width 90%

	[width="100"]
		width 100%

