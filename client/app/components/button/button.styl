@import 'nib'

.likearts-content .vit-btn
	position relative
	background-color #f57c00
	color #fff
	border-radius 20px
	margin 8px
	padding 8px 18px
	font-weight 300
	letter-spacing 1px
	outline none
	min-width 200px
	font-family 'MyseoSansCyrl'
	font-weight 300
	@extend .paper-shadow-z1
	&:focus
		outline none
	&:active
			box-shadow inset 0 3px 5px rgba(0, 0, 0, .125)

	&--white
		background-color #f5f5f5
		color $p-color-text
		font-size 2rem