@import 'nib'

.likearts-content .footer
	position relative
	width 100%
	height auto
	background-color #f5f5f5
	padding 30px 15px
	@media all and (min-width: 1200px)
		padding 30px 0


	.c-footer
		position relative
		@extend .flex
		flex-flow column wrap
		align-items stretch
		@media all and (min-width: $phone)
			flex-flow row wrap
			justify-content space-between
			margin 0 -20px


		&__group
			flex 1
			margin 10px 0
			@media all and (min-width: $phone)
				margin 10px 20px

	&__title
		font-size 2.1rem
		margin-bottom 20px

	&__list
		list-style none
		padding 0
		margin 0

	&__list-item
		font-size 1.6rem
		margin-bottom 8px

	&__list-link
		color $p-color-text
		@extend .transition
		@media all and (min-width: 1200px)
			white-space nowrap
		&:hover
			text-decoration underline
		
	&__social-link

		&:before
			content ''
			position relative
			top 4px
			display inline-block
			width 20px
			height 20px
			margin-right 10px
			@extend .cover

		&--vk
			&:before
				background-image url(../resources/icons/vk-b.svg)

		&--fb
			&:before
				background-image url(../resources/icons/fb-b.svg)

		&--ig
			&:before
				background-image url(../resources/icons/ig-b.svg)

		&--yt
			&:before
				background-image url(../resources/icons/yt-b.svg)


	.mailing

		&__gift
			@extend .flex
			flex-flow row nowrap
			justify-content space-between
			align-items flex-start

		&__gift-icon
			width 50px
			height 50px
			@extend .cover
			background-image url(../resources/icons/book-b.svg)
			margin-top 5px

		&__gift-text
			flex 1
			font-size 1.6rem

		&__gift-link
			color #0097a7
			white-space nowrap
			&:hover
				text-decoration underline

		&__form
			margin 20px 0

		&__input
			outline none
			border 0
			padding 8px 16px
			border-radius 18px
			background-color #fff
			@extend .transition
			&:focus
				outline none
				@extend .paper-shadow-z1

			&::-webkit-input-placeholder
				transform translate(0, 2px)

			&::-moz-placeholder
				transform translate(0, 2px)

			&:-moz-placeholder
				transform translate(0, 2px)

			&:-ms-input-placeholder
				transform translate(0, 2px)


	.copyright
		width 100%
		height auto
		@extend .flex
		justify-content flex-end
		@media all and (max-width: $phone)
			display none

		.c-copyright
			position absolute
			bottom 30px

		&__logo
			@extend .flex
			justify-content space-between
			align-items flex-end
			margin 0 -10px

		&__logo-item
			@extend .cover
			margin 10px

			&--1
				width 115px
				height 20px
				background-image url(../resources/img/footer-logo-1.png)

			&--2
				width 93px
				height 32px
				background-image url(../resources/img/footer-logo-2.png)

		&__sign
			text-align right
			color #a0a0a0
			margin-top 15px

