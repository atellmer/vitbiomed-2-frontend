@import 'nib'

.likearts-content .main-page
	.slider
		width 100%
		margin 124px 0 0 0
		@media all and (min-width: $phone)
			margin 20px 0
			padding 0 15px
		@media all and (min-width: 1200px)
			padding 0

		&__item
			width 100%
			height auto
			@extend .flex, .cover
			justify-content flex-start
			@media all and (min-width: $phone)
				min-height 300px
			@media all and (min-width: $notebook)
				min-height 570px

		&__item-wrap
			background-color #fff
			@media all and (min-width: $phone)
				background-color transparent

		&__text-content
			width 100%	
			text-align center
			@media all and (min-width: $phone)
				padding 0 30px
				width 70%
				text-align left
			@media all and (min-width: 1200px)
				width 50%


		&__title
			margin 20px 0
			font-weight 300
			font-size 1.8rem
			@media all and (min-width: $phone)
				font-size 2.5rem
			@media all and (min-width: 1200px)
				font-size 3.5rem

		&__link
			@extend .transition
			&:hover
				border-bottom 1px solid #0097a7
			@media all and (min-width: $phone)
				font-size 1.4rem
			@media all and (min-width: 1200px)
				font-size 2rem


	.links
		margin 0
		@media all and (min-width: $phone)
			margin 60px 0 0 0
			padding 0 15px
		@media all and (min-width: 1200px)
			padding 0

		.c-links
			@extend .flex
			justify-content space-between
			align-items stretch

			&__group
				@extend .flex
				justify-content flex-start
				align-items flex-start
				@media all and (max-width: $phone)
					width 100%

		&__item
			@extend .flex
			justify-content flex-start
			align-items stretch
			margin 20px 0
			padding 15px
			@media all and (max-width: $phone)
				width 100%
				margin 5px 0
				padding 0 15px
			@media all and (min-width: $phone)
				padding 15px 15px 15px 0
			@media all and (min-width: $notebook)
				flex-flow row nowrap

		&__item-pic
			width 64px
			height 64px
			@extend .cover
			@media all and (max-width: $phone)
				display none

			&--doc
				background-image url(../resources/icons/doc-g.svg)

			&--scope
				background-image url(../resources/icons/scope-g.svg)

			&--attach
				background-image url(../resources/icons/attach-g.svg)

			&--complex
				background-image url(../resources/icons/complex-g.svg)

			&--add
				background-image url(../resources/icons/add-g.svg)

		&__item-content
			margin 30px 0
			width 100%
			@media all and (max-width: $phone)
				margin 0
			@media all and (min-width: $notebook)
				margin 0 0 0 30px
				flex 1

		&__item-title
			position relative
			font-size 1.8rem
			margin-bottom 20px
			cursor pointer
			@media all and (min-width: $phone)
				cursor default

			&:before
				content ''
				display inline-block
				position relative
				top 5px
				left 0
				width 24px
				height 24px
				margin-right 7px	
				border-radius 50%
				border 2px solid $p-color-text
				@media all and (min-width: $phone)
					display none

			
		&__list
			list-style none
			padding-left 30px
			margin 0
			@media all and (max-width: $phone)
				display none
			@media all and (min-width: $phone)
				padding-left 0
				

		&__list-item
			font-size 1.5rem
			margin-bottom 8px

		&__list-link
			color $p-color-text
			@extend .transition
			&:hover
				color $p-color
				border-bottom 1px solid $p-color

	.map
		position relative

	.vit-google-map
		@media all and (max-width: $phone)
			display none

	.clinics
		position relative
		background-color #fff
		padding 0 15px
		zoom 1.01
		@media all and (min-width: $phone)
			position absolute
			z-index 2
			top 50%
			transform translate(0, -50%)
			padding 30px 40px
			background-color #fcfcfc
			margin-left 15px
		@media all and (min-width: 1200px)
			margin-left 0

		&__title
			font-weight 300
			margin 20px 0

		&__list
			list-style none
			padding 0
			margin 0

		&__list-link
			@extend .transition
			&:hover
				color #f57c00
				border-bottom 1px solid #f57c00

		md-radio-button
			margin-bottom 12px
			[ng-transclude]
				pointer-events auto

		.c-btn
			@extend .flex
			flex-flow column wrap
			justify-content space-between
			margin 50px 0
			@media all and (min-width: $phone)
				flex-flow row wrap
				margin 0 -10px

		.vit-btn
			@media all and (max-width: $phone)
				width 100%


	.feedback
		width 100%
		height auto
		min-height 200px
		background-color #fff
		padding 0 15px
		@extend .flex
		@media all and (min-width: 1200px)
			padding 0

		.c-feedback
			@extend .flex
			flex-flow column wrap
			justify-content space-between
			align-items stretch
			@media all and (min-width: $phone)
				flex-flow row wrap

			&__group
				flex 1
				@extend .flex
				flex-flow row nowrap
				justify-content center
				align-items center
				margin 20px 0
				@media all and (min-width: $phone)
					margin 0
				@media all and (min-width: $notebook)
					justify-content flex-start

		&__title
			font-size 2.1rem
			@media all and (max-width: 480px)
				font-size 1.8rem

			&--2
				@media all and (max-width: $notebook)
					display none

		&__btn
			@extend .flex
			margin 0 30px

		.question
			@extend .flex
			flex-flow row nowrap
			justify-content space-between
			
			&__circle
				display inline-block
				width 12px
				height 12px
				border 1px solid #f57c00
				border-radius 50%
				margin-right 20px

			&__btn
				width 60px
				height 60px
				@extend .cover
				background-image url(../resources/icons/question-o.svg)
				cursor pointer



	




