@import 'nib'


.likearts-content .main-page
	.slider
		width 100%
		margin 124px 0 0 0
		@media all and (min-width: $phone)
			margin 20px 0
			padding 0 15px
		@media all and (min-width: 1200px)
			padding 0

		&__item
			width 100%
			height auto
			@extend .flex, .cover
			justify-content flex-start
			@media all and (min-width: $phone)
				min-height 300px
			@media all and (min-width: $notebook)
				min-height 570px

		&__item-wrap
			background-color #fff
			@media all and (min-width: $phone)
				background-color transparent

		&__text-content
			width 100%	
			text-align center
			@media all and (min-width: $phone)
				padding 0 30px
				width 70%
				text-align left
			@media all and (min-width: 1200px)
				width 50%


		&__title
			margin 20px 0
			font-weight 300
			font-size 1.8rem
			@media all and (min-width: $phone)
				font-size 2.5rem
			@media all and (min-width: 1200px)
				font-size 3.5rem

		&__link
			@extend .transition
			&:hover
				border-bottom 1px solid #0097a7
			@media all and (min-width: $phone)
				font-size 1.4rem
			@media all and (min-width: 1200px)
				font-size 2rem

			
			




